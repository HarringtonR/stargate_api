option_settings:
  aws:elasticbeanstalk:application:environment:
    # Ensure the app listens on port 5000 on all interfaces (required for EB)
    ASPNETCORE_URLS: "http://0.0.0.0:5000"
    ASPNETCORE_ENVIRONMENT: Production
    # Disable HTTPS redirection at app level (EB load balancer handles SSL termination)
    ASPNETCORE_FORWARDEDHEADERS_ENABLED: true
    # Additional logging
    ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: true
    ASPNETCORE_LOGGING__LOGLEVEL__DEFAULT: Information
    ASPNETCORE_LOGGING__LOGLEVEL__MICROSOFT: Warning
    ASPNETCORE_LOGGING__LOGLEVEL__MICROSOFT.HOSTING.LIFETIME: Information